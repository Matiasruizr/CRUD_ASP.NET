@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>@ViewBag.Titulo</h1>
    <p class="lead">Agregando usuarios en asp.net!</p>
</div>


<div class="row">
    <div class="col-lg-6">
        <form method="post">
            <div class="form-group">
                <label for="idUsuario">Id de usuario</label>
                <input type="text" class="form-control" id="idUsuario" aria-describedby="emailHelp" placeholder="Ingresa tu id" name="idUsuario">
            </div>

            <div class="form-group">
                <label for="nombreUsuario">Nombre de usuario</label>
                <input type="text" class="form-control" id="nombreUsuario" aria-describedby="emailHelp" placeholder="Ingresa tu nombre" name="nombreUsuario">
            </div>
            <div class="form-group">
                <label for="emailUsuario">Direccion de email</label>
                <input type="email" class="form-control" id="emailUsuario" aria-describedby="emailHelp" placeholder="Ingresa tu email" name="emailUsuario">
                <small id="emailHelp" class="form-text text-muted">No compartiremso tus datos personales.</small>
            </div>


            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>
    <div class="col-lg-6">
        <div class="card" style="width: 18rem;">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">ID: @ViewBag.IdUsuario</li>
                <li class="list-group-item">Nombre: @ViewBag.NombreUsuario</li>
                <li class="list-group-item">Email: @ViewBag.EmailUsuario</li>
            </ul>
        </div>
    </div>
  
</div>
